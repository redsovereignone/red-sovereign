---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Breadcrumbs from "@/components/astro/Breadcrumbs.astro";
import JsonLd from "@/components/astro/JsonLd.astro";
import { webPageSchema, serviceSchema } from "@/lib/schemas";
import { site } from "@/data/site";

const tiers = [
  {
    name: "Activate",
    icon: "graduation-cap",
    price: "Starting at $5K",
    description: "AI productivity training for your team",
    features: [
      "Advanced AI workflow training",
      "Tool setup and configuration",
      "Team-specific use case development",
      "2–3× productivity improvement",
      "2-week engagement",
    ],
  },
  {
    name: "Automate",
    icon: "workflow",
    price: "Starting at $10K",
    description: "Operations audit and AI automation",
    features: [
      "Full operations audit",
      "AI agent development",
      "Workflow automation",
      "Measurable ROI within 30 days",
      "4–8 week engagement",
    ],
    featured: true,
  },
  {
    name: "Build",
    icon: "code-2",
    price: "Starting at $25K",
    description: "Custom software and AI products",
    features: [
      "Custom software development",
      "AI agent and product builds",
      "Team capability transfer",
      "Governance frameworks",
      "8–12 week engagement",
    ],
  },
];
---

<BaseLayout
  title="Pricing"
  description="Transparent pricing for AI strategy, automation, and custom software development. From team training to full business transformation."
>
  <Breadcrumbs items={[{ label: "Pricing", href: "/pricing/" }]} />

  <JsonLd
    schema={webPageSchema({
      name: "Red Sovereign Pricing",
      description:
        "Transparent pricing for AI strategy, automation, and custom software development.",
      url: `${site.url}/pricing/`,
    })}
  />
  <JsonLd
    schema={serviceSchema({
      name: "Activate — AI Productivity Training",
      description:
        "2-week AI productivity training engagement that makes your team 2-3x more productive. Includes advanced AI workflow training, tool setup, and team-specific use case development. Starting at $5K.",
    })}
  />
  <JsonLd
    schema={serviceSchema({
      name: "Automate — Operations Automation",
      description:
        "4-8 week operations automation engagement including full operations audit, AI agent development, and workflow automation with measurable ROI within 30 days. Starting at $10K.",
    })}
  />
  <JsonLd
    schema={serviceSchema({
      name: "Build — Custom Software & AI Products",
      description:
        "8-12 week custom software development engagement including AI agent and product builds, team capability transfer, and governance frameworks. Starting at $25K.",
    })}
  />

  <section class="pt-12 pb-28 px-10 max-md:pt-8 max-md:pb-16 max-md:px-6">
    <div class="max-w-[1200px] mx-auto">
      <div class="section-tag" style="justify-content: center;">Pricing</div>

      <h1
        class="font-display text-[clamp(2.4rem,5vw,4rem)] font-extrabold leading-[1.1] tracking-tight mb-6 text-center"
      >
        Invest in <span class="text-red">capability</span>, not dependency.
      </h1>

      <div class="max-w-[620px] mx-auto text-center mb-6">
        <h2 class="font-display text-lg font-bold text-cream mb-2">
          How much does Red Sovereign cost?
        </h2>
        <p class="font-serif text-[1.15rem] text-cream-muted leading-relaxed">
          Every engagement is designed to make you self-sufficient. Pricing starts at
          $5K for team training, $10K for operations automation, and $25K for custom
          software. You own the systems, the knowledge, and the capability when we're done.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6 mt-16">
        {
          tiers.map((tier) => (
            <div
              class:list={[
                "p-10 rounded-sm border flex flex-col",
                tier.featured
                  ? "border-red/30 bg-red/[0.05] shadow-[0_0_40px_rgba(200,16,46,0.06)]"
                  : "border-cream/[0.06] bg-surface",
              ]}
            >
              {tier.featured ? (
                <div class="inline-block px-3 py-1 text-[0.65rem] font-display font-bold tracking-[0.15em] uppercase bg-red text-cream rounded-sm mb-4 w-fit">
                  Most Popular
                </div>
              ) : (
                <div class="h-[26px] mb-4"></div>
              )}
              {tier.icon === "graduation-cap" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-red mb-3">
                  <path d="M21.42 10.922a1 1 0 0 0-.019-1.838L12.83 5.18a2 2 0 0 0-1.66 0L2.6 9.08a1 1 0 0 0 0 1.832l8.57 3.908a2 2 0 0 0 1.66 0z"/>
                  <path d="M22 10v6"/>
                  <path d="M6 12.5V16a6 3 0 0 0 12 0v-3.5"/>
                </svg>
              )}
              {tier.icon === "workflow" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-red mb-3">
                  <rect width="8" height="8" x="3" y="3" rx="2"/>
                  <path d="M7 11v4a2 2 0 0 0 2 2h4"/>
                  <rect width="8" height="8" x="13" y="13" rx="2"/>
                </svg>
              )}
              {tier.icon === "code-2" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-red mb-3">
                  <path d="m18 16 4-4-4-4"/>
                  <path d="m6 8-4 4 4 4"/>
                  <path d="m14.5 4-5 16"/>
                </svg>
              )}
              <div class="font-display text-[0.7rem] font-bold tracking-[0.2em] uppercase text-red mb-2">
                {tier.name}
              </div>
              <div class="font-display text-[1.8rem] font-extrabold mb-2">
                {tier.price}
              </div>
              <p class="text-cream-muted text-[0.95rem] mb-8">
                {tier.description}
              </p>
              <ul class="space-y-3 mb-10 flex-1">
                {tier.features.map((feature) => (
                  <li class="flex items-start gap-3 text-[0.9rem] text-cream-muted">
                    <span class="text-red mt-0.5 shrink-0">&#10003;</span>
                    {feature}
                  </li>
                ))}
              </ul>
              <a
                href={site.booking}
                target="_blank"
                rel="noopener noreferrer"
                class:list={[
                  "inline-flex items-center justify-center py-3.5 px-6 font-display font-bold text-[0.8rem] tracking-[0.06em] uppercase no-underline rounded-sm transition-all duration-300",
                  tier.featured
                    ? "bg-red text-cream hover:bg-red-glow hover:shadow-[0_4px_40px_rgba(200,16,46,0.3)]"
                    : "border border-cream/[0.12] text-cream hover:border-red/50",
                ]}
              >
                Book a Call
              </a>
            </div>
          ))
        }
      </div>

      <p
        class="text-center text-cream-dim text-sm mt-10 max-w-[500px] mx-auto"
      >
        All engagements include capability transfer. Need a custom scope?
        <a
          href={`mailto:${site.email}`}
          class="text-red hover:text-red-glow transition-colors">Let's talk.</a
        >
      </p>

      <!-- Cross-links -->
      <div class="mt-20 max-w-[800px] mx-auto grid md:grid-cols-2 gap-6">
        <a
          href="/about/"
          class="group block p-8 bg-surface border border-cream/[0.06] rounded-sm no-underline hover:border-red/30 transition-colors duration-300"
        >
          <div class="font-display text-[0.7rem] font-bold tracking-[0.15em] uppercase text-red mb-2">
            About
          </div>
          <div class="font-display font-bold text-cream group-hover:text-red transition-colors duration-300">
            Meet the founder
          </div>
          <p class="text-cream-muted text-sm mt-1">
            25 years building, scaling, and exiting companies.
          </p>
        </a>
        <a
          href="/faq/"
          class="group block p-8 bg-surface border border-cream/[0.06] rounded-sm no-underline hover:border-red/30 transition-colors duration-300"
        >
          <div class="font-display text-[0.7rem] font-bold tracking-[0.15em] uppercase text-red mb-2">
            FAQ
          </div>
          <div class="font-display font-bold text-cream group-hover:text-red transition-colors duration-300">
            Common questions answered
          </div>
          <p class="text-cream-muted text-sm mt-1">
            How we work, who we work with, and what to expect.
          </p>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
