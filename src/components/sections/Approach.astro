---
const layerIcons = [
  // Zap (Activate)
  `<polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>`,
  // Bot (Automate)
  `<path d="M12 8V4H8"/><rect width="16" height="12" x="4" y="8" rx="2"/><path d="M2 14h2"/><path d="M20 14h2"/><path d="M15 13v2"/><path d="M9 13v2"/>`,
  // Hammer (Build)
  `<path d="m15 12-8.373 8.373a1 1 0 1 1-3-3L12 9"/><path d="m18 15 4-4"/><path d="m21.5 11.5-1.914-1.914A2 2 0 0 1 19 8.172V7l-2.26-2.26a6 6 0 0 0-4.202-1.756L9 2.96l.92.82A6.18 6.18 0 0 1 12 8.4V10l2 2h1.172a2 2 0 0 1 1.414.586L18.5 14.5"/>`,
  // Settings (Operate)
  `<path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/><circle cx="12" cy="12" r="3"/>`,
];

const layers = [
  {
    num: "01",
    name: "Activate",
    desc: "AI productivity training that goes far beyond chatbot Q&A. Your team learns to use advanced AI tools like Claude, Cowork, and browser agents to fundamentally change how they work every day.",
    outcome:
      "Your people become 2–3× more productive with the roles they already have. Fastest time-to-value. The foundation for everything else.",
  },
  {
    num: "02",
    name: "Automate",
    desc: "We audit your operations and identify the manual, repetitive processes that eat margin. Then we build the automations, not with expensive middleware, but with AI agents that handle real work.",
    outcome:
      "Measurable reduction in manual labor. Faster throughput. Lower cost per unit of delivery. You scale without scaling headcount.",
  },
  {
    num: "03",
    name: "Build",
    desc: "Custom software, AI agents, and new products built with AI-powered development. We build the first version alongside your team: a working system, not a prototype that dies on the vine.",
    outcome:
      "New revenue streams. Productized services. Proprietary tools your competitors can't buy. The kind of leverage that used to require a $500K dev budget.",
  },
  {
    num: "04",
    name: "Operate",
    desc: "We train your team to use AI-powered development tools, establish governance frameworks including security reviews, and set up the processes for your organization to continuously build and ship on its own.",
    outcome:
      "Your business becomes its own development shop. No vendor dependency. No dev team required. You own the capability permanently.",
  },
];
---

<section id="approach" class="py-28 px-10 max-md:py-16 max-md:px-6">
  <div class="max-w-[1200px] mx-auto fade-in">
    <div class="section-tag">What We Do</div>
    <h2
      class="font-display text-[clamp(2rem,4vw,3.2rem)] font-extrabold leading-[1.1] tracking-tight mb-6"
    >
      How does Red Sovereign make businesses <span class="text-red">AI-capable?</span>
    </h2>
    <p
      class="font-serif text-[1.2rem] text-cream-muted max-w-[680px] leading-relaxed mb-16"
    >
      Red Sovereign uses a four-layer approach — Activate, Automate, Build, Operate —
      to train your team, automate your operations, build your first custom AI
      solutions, then put the processes in place so your organization keeps
      building on its own. No chatbot implementation. No strategy deck that gathers dust.
    </p>

    <div
      class="grid gap-px bg-cream/[0.06] border border-cream/[0.06] rounded-sm overflow-hidden"
    >
      {
        layers.map((layer, i) => (
          <div class="grid md:grid-cols-[240px_1fr_1fr] max-md:grid-cols-1 bg-black hover:bg-surface transition-colors duration-300">
            <div class="p-10 max-md:p-6 flex flex-col justify-center md:border-r border-cream/[0.06] max-md:border-b max-md:border-cream/[0.06]">
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-red mb-3">
                <Fragment set:html={layerIcons[i]} />
              </svg>
              <span class="font-display text-[0.65rem] font-bold tracking-[0.2em] uppercase text-red">
                Layer {layer.num}
              </span>
              <strong class="font-display text-2xl font-extrabold mt-1">
                {layer.name}
              </strong>
            </div>
            <div class="p-10 max-md:p-6 max-md:pb-0 md:border-r border-cream/[0.06]">
              <p class="text-cream-muted text-[0.95rem] leading-relaxed">
                {layer.desc}
              </p>
            </div>
            <div class="p-10 max-md:p-6 max-md:pt-2">
              <p class="font-serif italic text-cream text-base leading-relaxed">
                {layer.outcome}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
